package com.uwb.bt2j.indexer;

public class BitPack {
	public static void pack_2b_in_8b(const int two, uint8_t& eight, const int off) {
		eight |= (two << (off*2));
	}
	
	public static int unpack_2b_from_8b(const uint8_t eight, const int off) {
		return ((eight >> (off*2)) & 0x3);
	}
	
	public static void pack_2b_in_32b(int two, uint32_t& thirty2, const int off) {
		thirty2 |= (two << (off*2));
	}
	
	public static int unpack_2b_from_32b(int thirty2, const int off) {
		assert_lt(off, 16);
		return ((thirty2 >> (off*2)) & 0x3);
	}
}
