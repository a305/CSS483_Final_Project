package com.uwb.bt2j.util;

import java.io.File;

public class BitpairOutFileBuf {
	public BitpairOutFileBuf(String in) {
		bpPtr_ = 0;
		cur_ = 0;
		out_ = new File(in);
		if(out_ == null) {
			System.err.println("Error: Could not open bitpair-output file " + in);
			throw 1;
		}
		memset(buf_, 0, BUF_SZ);
	}
}
