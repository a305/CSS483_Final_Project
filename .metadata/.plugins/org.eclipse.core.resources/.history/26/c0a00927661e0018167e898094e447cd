package com.uwb.bt2j.util.types;

public class EBitList {
	public EBitList(int isz, int cat) {
		l_ =
		reset();
	}
	
	public EBitList(int cat) {
		l_ = cat;
		reset();
	}
	
	public void clear() {
		reset();
	}
	
	public void reset() {
		l_.clear();
		max_ = Integer.MAX_VALUE;
	}
	
	public void set(int off) {
		resize(off);
		l_[off >> 3] |= (1 << (off & 7));
		if(off > max_ || max_ == Integer.MAX_VALUE) {
			max_ = off;
		}
	}
}
