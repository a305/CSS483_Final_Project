package com.uwb.bt2j.aligner.cache;

import com.uwb.bt2j.util.IndexTypes;

public class SAVal {
	public int topf;
	public int topb;
	public int i;
	public long len;
	
	public SAVal() {
		len = IndexTypes.OFF_MASK;
	}
	
	public boolean valid() {
		return len != IndexTypes.OFF_MASK;
	}
	
	public void init(int tf, int tb, int ii, int ln) {
		topf = tf;
		topb = tb;
		i = ii;
		len = ln;
	}
}
